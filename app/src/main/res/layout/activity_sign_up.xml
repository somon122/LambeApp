<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn.SignUpActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Register page"
                android:textColor="#FF6E40"
                android:textSize="25sp" />

                <EditText
                android:id="@+id/signUpEmail_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/email"
                android:paddingLeft="10dp"
                android:hint="Enter email address"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                />

            <EditText
                android:id="@+id/signUpNumber_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/phone"
                android:paddingLeft="10dp"
                android:hint="Enter phone number"
                android:textColor="#000000"
                android:inputType="number"
                />

            <EditText
                android:id="@+id/signUpReferCode_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawableLeft="@drawable/ic_menu_share"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:hint="refer code (Optional)"
                android:textColor="#000000"
                android:inputType="phone"
                />


            <EditText
                android:id="@+id/signUpPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/password"
                android:hint="Enter password"
                android:textColor="#000000"
                android:inputType="numberPassword"
                />
            <EditText
                android:id="@+id/signUpConfirmPassword_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/password"
                android:paddingLeft="10dp"
                android:hint="Confirm password"
                android:textColor="#000000"
                android:inputType="numberPassword"
                />

            <ProgressBar
                android:id="@+id/signUpProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/signUpButton_id"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textAllCaps="false"
                />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Are you already register?"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/gotoLogin_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Click here"
                    android:textColor="#035FF8"

                    />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>




</ScrollView>